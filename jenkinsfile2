pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                git branch: 'main', url: 'https://github.com/HarisUsman/Mlops_Project.git'
            }
        }

        stage('Build image') {
            steps {
                script {
                    docker.build("harisusman100/mlops_project")
                }
            }
        }

        stage('Test image') {
            steps {
                script {
                    docker.image("harisusman100/mlops_project").inside {
                        echo "Tests passed"
                    }
                }
            }
        }

        stage('Push image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub') {
                        docker.image("harisusman100/mlops_project").push("${env.BUILD_NUMBER}")
                        docker.image("harisusman100/mlops_project").push("latest")
                    }
                }
            }
        }
    }
}
